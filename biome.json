{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },

  "organizeImports": {
    "enabled": true
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },

  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "noDefaultExport": "off"
      },
      "correctness": {
        "noUndeclaredVariables": "off",
        "useHookAtTopLevel": "off"
      },
      "suspicious": {
        "noConsoleLog": "off"
      }
    }
  }
}
