{
  // TODO: add all relevant settings here
  "npm.packageManager": "bun",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "svelte",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],

  "files.associations": {
    "*.css": "tailwindcss"
  },

  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  }
}
